pipeline {
    agent any
    environment {
        PYTHON = tool name: 'python'
        SONAR_SCANNER = tool name: 'SonarQube Scanner'
    }
    stages {
        stage('Clone Repository') {
            steps {
                // Clone the Git repository
                git 'https://github.com/dev-ajay-git/python-calculator.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Install Python dependencies from the requirements file
                sh '${PYTHON}/usr/bin/python3 -m pip install -r requirements.txt'
            }
        }
        
        stage('Run Tests') {
            steps {
                // Run pytest on the tests folder
                sh '${PYTHON}/usr/bin/python3 -m pytest tests/'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                // Run SonarQube Scanner
                sh '''
                    ${SONAR_SCANNER}/bin/sonar-scanner \
                    -Dsonar.projectKey=python-calculator \
                    -Dsonar.sources=src \
                    -Dsonar.python.coverage.reportPaths=coverage.xml \
                    -Dsonar.host.url=http://<your-sonarqube-server>:9000
                '''
            }
        }
    }
}
